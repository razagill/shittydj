<div class="modal fade" id="addToPlaylistModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/queueSong" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Paste song URL</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">

          <div class="row form-group">
            <label for="songURL" class="col-sm-2 col-form-label">URL</label>
            <div class="col-sm-10">
              <input id="songURL" name="songURL" required type="text" class="form-control" value="" />
            </div>
          </div>

          <div class="row form-group">
            <label for="songURL" class="col-sm-2 col-form-label">Provider</label>
            <div class="col-sm-10">
                <select value="youtube" name="providerType" class="form-control">
                  <option value="youtube">Youtbe</option>
                  <option value="bandcamp">BandCamp</option>
                </select>
            </div>
          </div>

        </div>

        <div class="modal-footer">
          <button type="submit" class="button-plus btn-block text-center">
            Add song to playlist
          </button>
        </div>

      </form>
    </div>
  </div>
</div>
